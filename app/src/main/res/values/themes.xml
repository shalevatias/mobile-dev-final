<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Theme -->
    <style name="Theme.Studygram" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Window -->
        <item name="android:windowBackground">@color/background</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Error Color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Shape Appearance -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Studygram.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Studygram.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Studygram.LargeComponent</item>

        <!-- Material Components -->
        <item name="materialCardViewStyle">@style/Widget.Studygram.CardView</item>
        <item name="textInputStyle">@style/Widget.Studygram.TextInputLayout</item>
        <item name="bottomNavigationStyle">@style/Widget.Studygram.BottomNavigationView</item>
    </style>

    <style name="Theme.Studygram.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.Studygram.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/button_radius</item>
    </style>

    <style name="ShapeAppearance.Studygram.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/card_radius</item>
    </style>

    <style name="ShapeAppearance.Studygram.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.Studygram.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">@dimen/elevation_card</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <!-- Text Input Style -->
    <style name="Widget.Studygram.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/input_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_radius</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/text_secondary</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.Studygram.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_color_selector</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="elevation">@dimen/elevation_appbar</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.Studygram.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Studygram.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Widget.Studygram.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/white</item>
        <item name="elevation">@dimen/elevation_appbar</item>
    </style>

    <!-- Circle Image View Style -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
